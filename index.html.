<script>
  // Инициализация переменных
  let selectedMethod = null;
  const priceRUB = 990;
  const priceUSD = 13.73;
  const urlRUB = "https://app.lava.top/ru/products/f8c0ba81-00ae-4c20-8449-42c00ef749b0?currency=RUB";
  const urlUSD = "https://app.lava.top/ru/products/f8c0ba81-00ae-4c20-8449-42c00ef749b0?currency=USD";

  function choose(method, el) {
    selectedMethod = method;
    // Снять активность у всех
    document.querySelectorAll('.method').forEach(m => m.classList.remove('active'));
    // Пометить выбранный
    el.classList.add('active');

    // Обновить цену
    const priceValueEl = document.getElementById('priceValue');
    const priceCurrencyEl = document.getElementById('priceCurrency');
    if (method === 'Банк РФ') {
      priceValueEl.textContent = priceRUB;
      priceCurrencyEl.textContent = 'RUB';
    } else {
      priceValueEl.textContent = priceUSD;
      priceCurrencyEl.textContent = 'USD';
    }
  }

  function toStep2() {
    const emailInput = document.getElementById('email');
    if (!selectedMethod) {
      alert('Пожалуйста, выберите метод оплаты.');
      return;
    }
    if (!emailInput.value || !emailInput.checkValidity()) {
      alert('Пожалуйста, введите корректный email.');
      return;
    }

    // Обновляем данные в подтверждении
    document.getElementById('c_method').textContent = selectedMethod;
    document.getElementById('c_email').textContent = emailInput.value;

    const confirmPriceEl = document.getElementById('confirmPrice');
    if (selectedMethod === 'Банк РФ') {
      confirmPriceEl.textContent = `${priceRUB} RUB`;
    } else {
      confirmPriceEl.textContent = `${priceUSD} USD`;
    }

    // Переходим к шагу 2
    document.getElementById('step1').style.display = 'none';
    document.getElementById('step2').style.display = 'block';

    // Обновляем шаги
    document.getElementById('stepIndicator1').classList.remove('active');
    document.getElementById('stepIndicator1').classList.add('done');
    document.getElementById('stepIndicator2').classList.add('active');
  }

  function backToStep1(event) {
    event.preventDefault();
    document.getElementById('step2').style.display = 'none';
    document.getElementById('step1').style.display = 'block';

    // Обновляем шаги
    document.getElementById('stepIndicator2').classList.remove('active');
    document.getElementById('stepIndicator1').classList.remove('done');
    document.getElementById('stepIndicator1').classList.add('active');
  }

  function proceedToPay() {
    // Переходим к шагу 3
    document.getElementById('step2').style.display = 'none';
    document.getElementById('step3').style.display = 'block';

    // Обновляем шаги
    document.getElementById('stepIndicator2').classList.remove('active');
    document.getElementById('stepIndicator2').classList.add('done');
    document.getElementById('stepIndicator3').classList.add('active');

    // Переадресация на страницу оплаты
    let paymentUrl = selectedMethod === 'Банк РФ' ? urlRUB : urlUSD;
    window.location.href = paymentUrl;
  }

  // Предустановить метод по умолчанию (если нужно)
  // choose('Банк РФ', document.getElementById('m_rus'));
</script>

</body>
