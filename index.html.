        <!-- STEP 1 -->
        <div id="step1">
          <div class="heading">Доступ в FastGuide</div>
          <div class="subhead">Выберите метод оплаты</div>

          <div class="methods" role="list">
            <div class="method" id="m_rus" role="button" tabindex="0" onclick="choose('Банк РФ', this)">Банк РФ</div>
            <div class="method" id="m_int" role="button" tabindex="0" onclick="choose('Иностранный банк', this)">Иностранный банк</div>
